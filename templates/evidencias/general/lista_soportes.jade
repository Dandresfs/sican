block breadcrum
    a(href="/proyectos/",class="link_button")
        paper-icon-item(class="breadcrumb-paper-icon-item-class") Inicio
            iron-icon(icon="check",item-icon)
    a(href="/evidencias/general/",class="link_button")
        paper-icon-item(class="breadcrumb-paper-icon-item-class") Lista de diplomados
            iron-icon(icon="check",item-icon)
    a(href="../../../../../../../../",class="link_button")
        paper-icon-item(class="breadcrumb-paper-icon-item-class") Formadores {{nombre_diplomado}}
            iron-icon(icon="check",item-icon)
    a(href="../../../../../../",class="link_button")
        paper-icon-item(class="breadcrumb-paper-icon-item-class") {{nombre_formador}}
            iron-icon(icon="check",item-icon)
    a(href="../../../../",class="link_button")
        paper-icon-item(class="breadcrumb-paper-icon-item-class") {{nombre_nivel}}
            iron-icon(icon="check",item-icon)
    a(href="../../",class="link_button")
        paper-icon-item(class="breadcrumb-paper-icon-item-class")  {{nombre_sesion}}
            iron-icon(icon="check",item-icon)
    paper-icon-item(class="breadcrum_active",disabled) Entregable {{id_entregable}}
        iron-icon(icon="check",item-icon)
block scroll_header_panel_content
    div(class="container-fluid container-index")
        | {% if nuevo_permiso %}
        a(href="nuevo",class="link_button")
            paper-button(class="submit") Nuevo
        | {% endif %}
        table(id="table",class="display responsive no-wrap table table-striped table-bordered",width="100%")
            thead
                tr
                    th Id
                    th Beneficiarios
                    th Aprobados
                    th Archivo
                    th Eliminar

            tbody
                tr
                    td Id
                    td Beneficiarios
                    td Aprobados
                    td Archivo
                    td Eliminar

block body_script_content
    script.
        $(document).ready(function () {
            var table = $('#table').DataTable({
                "stateSave": true,
                "searching": true,
                "processing": true,
                "serverSide": true,
                "scrollX": true,
                "ajax": "/rest/evidencias/soportes/{{id_entregable}}/{{id_formador}}/",
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.8/i18n/Spanish.json"
                },
                "order": [[0, "asc"]],
                "columns": [
                    {
                        "data": 0,
                        "render": function (data, type, row, meta) {
                            if (row[4]) {
                                return '<a href="editar/' + data + '" style="color:#004c99;">SIC-' + data + '</a>';
                            }
                            else {
                                return 'SIC-'+data;
                            }
                        },
                        "orderable": true,
                    },
                    {
                        "data": 1,
                        "orderable": true,
                    },
                    {
                        "data": 2,
                        "orderable": true,
                    },
                    {
                        "orderable": false,
                        "className": 'text-center',
                        "data": null,
                        "render": function (data, type, row, meta) {
                            if (row[3] != '') {
                                return '<a href="' + row[3] + '" style="color:#004c99;"><img src="/static/img/file.png" height="32"></a>';
                            }
                            else {
                                return '';
                            }
                        },
                    },
                    {
                        "orderable": false,
                        "className": 'text-center',
                        "data": null,
                        "render": function (data, type, row, meta) {
                            if (row[5]) {
                                return '<a href="eliminar/' + row[0] + '" style="color:#004c99;"><img src="/static/img/delete.png" height="24"></a>';
                            }
                            else {
                                return '<img src="/static/img/delete_gray.png" height="24">';
                            }
                        },
                        "defaultContent": ''
                    },
                ]
            });
        });