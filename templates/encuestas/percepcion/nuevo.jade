extends ../base
block title
    | ENCUESTAS
block body_content
    div(class="container-fluid")
        div(class="row")
            div(class="col-md-8 col-md-offset-2 text-center")
                img(src="{% static 'img/logocpe.png'%}")
                h2(class="title-white") Encuesta de percepción inicial y detección de necesidades
                div(class="text-center")
                    form(action="",method="POST",enctype="multipart/form-data",id="form-administrador")
                        | {% csrf_token %}
                        | {% crispy form %}

block body_script
    script.
        $(document).ready(function(){
            if( $('#id_area').val() == "Otras" ){
                $('#otra_area').removeClass('hidden');
            }
            else{
                $('#otra_area').addClass('hidden');
            }


            if($('#id_pregunta_1_1').is(':checked')){
                $("#primer_condicional").removeClass('hidden');
                $("#tercer_condicional").removeClass('hidden');
            }
            else{
                $("#primer_condicional").addClass('hidden');
                $("#tercer_condicional").addClass('hidden');
            }


            if($('#id_pregunta_7_1').is(':checked')){
                $("#segundo_condicional").removeClass('hidden');
            }
            else{
                $("#segundo_condicional").addClass('hidden');
            }


        });

    script.
        $('#id_area').on('change',function(){
            if( $('#id_area').val() == "Otras" ){
                $('#otra_area').removeClass('hidden');
            }
            else{
                $('#otra_area').addClass('hidden');
            }
        })
    script.
        $('#id_pregunta_13').slider({
            formatter: function(value) {
                return value + '%';
            },
            max:100,
            value:50
        });

        $('#id_antiguedad').slider({
            formatter: function(value) {
                return value + ' años';
            },
            max:50
        });

    script.
        $("#id_pregunta_1_1").on('click',function(){
            if($("#primer_condicional").hasClass('hidden') == true){
                $("#primer_condicional").removeClass('hidden');
                $("#tercer_condicional").removeClass('hidden');
            }
            $("#fieldset_pregunta_1_1").addClass('hidden');
        })

        $("#id_pregunta_1_2").on('click',function(){
            if($("#fieldset_pregunta_1_1").hasClass('hidden') == true){
                $("#fieldset_pregunta_1_1").removeClass('hidden');
            }
            $("#primer_condicional").addClass('hidden');
            $("#tercer_condicional").addClass('hidden');
        })

        $("#id_pregunta_6_4").on('click',function(){
            if($("#otro_1").hasClass('hidden') == true){
                $("#otro_1").removeClass('hidden');
            }
        })

        $("#id_pregunta_6_1").on('click',function(){
            $("#otro_1").addClass('hidden');
        })

        $("#id_pregunta_6_2").on('click',function(){
            $("#otro_1").addClass('hidden');
        })

        $("#id_pregunta_6_3").on('click',function(){
            $("#otro_1").addClass('hidden');
        })


        $("#id_pregunta_7_1").on('click',function(){
            if($("#segundo_condicional").hasClass('hidden') == true){
                $("#segundo_condicional").removeClass('hidden');
            }
        })

        $("#id_pregunta_7_2").on('click',function(){
            $("#segundo_condicional").addClass('hidden');
        })




        $("#id_pregunta_12_1").on('click',function(){
            if($("#otro_2").hasClass('hidden') == true){
                $("#otro_2").removeClass('hidden');
            }
        })

        $("#id_pregunta_12_2").on('click',function(){
            $("#otro_2").addClass('hidden');
        })

        $("#id_pregunta_12_3").on('click',function(){
            $("#otro_2").addClass('hidden');
        })

        $("#id_pregunta_12_4").on('click',function(){
            $("#otro_2").addClass('hidden');
        })
